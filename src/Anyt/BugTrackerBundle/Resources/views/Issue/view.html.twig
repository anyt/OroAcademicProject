{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% block navButtons %}
    {% if entity.isAllowedParent() and  resource_granted('CREATE', entity) %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('anyt_issue_create', {'parent': entity.id}),
                'entity_label': 'anyt.bugtracker.issue.type.subtask.label'|trans
            }) }}
        </div>
    {% endif %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('anyt_issue_update', { id: entity.id }),
            'entity_label': 'anyt.bugtracker.issue.entity_label'|trans
        }) }}
    {% endif %}

    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('anyt_api_delete_issue', {'id': entity.id}),
            'dataRedirect': path('anyt_issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-issue',
            'dataId': entity.id,
            'entity_label': 'anyt.bugtracker.issue.entity_label'|trans,
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity':      entity,
    'indexPath':   path('anyt_issue_index'),
    'indexLabel': 'anyt.bugtracker.issue.entity_plural_label'|trans,
    'entityTitle': entity.summary
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set data %}
        <div class="widget-content">
            <div class="row-fluid form-horizontal">
                <div class="responsive-block">
                    {{ UI.renderProperty('anyt.bugtracker.issue.summary.label'|trans, entity.summary) }}
                    {{ UI.renderProperty('anyt.bugtracker.issue.code.label'|trans, entity.code) }}
                    {{ UI.renderProperty('anyt.bugtracker.issue.description.label'|trans, entity.description) }}
                    {{ UI.renderProperty('anyt.bugtracker.issue.assignee.label'|trans, entity.assignee) }}
                    {{ UI.renderProperty('anyt.bugtracker.issue.type.label'|trans,
                    ('anyt.bugtracker.issue.type.' ~ entity.type ~ '.label')|trans) }}
                    {{ UI.renderProperty('anyt.bugtracker.issue.priority.label'|trans, entity.priority.title) }}
                    {{ UI.renderProperty('anyt.bugtracker.issue.resolution.label'|trans, entity.resolution.title) }}
                    {% if entity.parent is not null %}
                        {% set parentView %}
                            <a href="{{ path('anyt_issue_view', {'id': entity.parent.id}) }}">{{ entity.parent.summary }}</a>
                        {% endset %}
                        {{ UI.renderHtmlProperty('anyt.bugtracker.issue.parent.label'|trans, parentView) }}
                    {% endif %}
                    {% if entity.children is not empty %}
                        {#{{ UI.renderProperty('anyt.bugtracker.issue.children.label'|trans, entity.children.title) }}#}
                    {% endif %}
                </div>
            </div>
        </div>
    {% endset %}
    {% set dataBlocks = [
    {
    'title': 'General'|trans,
    'class': 'active',
    'subblocks': [
    { 'data' : [data] }
    ]
    }
    ] %}

    {% if entity.children is not empty %}
        {% set chilrenItemsWidget %}
            {{ oro_widget_render({
                'widgetType': 'block',
                'url': path('anyt_issue_children_widget_items', {id: entity.id})
            }) }}
        {% endset %}

        {% set dataBlocks = dataBlocks|merge([
        {
        'title': 'anyt.bugtracker.issue.children.label'|trans,
        'subblocks': [
        {'data' : [chilrenItemsWidget] }
        ]
        }
        ]) %}
    {% endif %}

    {% if entity.collaborators is not empty %}
        {% set collaboratorsWidget %}
            {{ oro_widget_render({
                'widgetType': 'block',
                'url': path('anyt_issue_collaborators_widget_items', {id: entity.id})
            }) }}
        {% endset %}

        {% set dataBlocks = dataBlocks|merge([
        {
        'title': 'anyt.bugtracker.issue.collaborators.label'|trans,
        'subblocks': [
        {'data' : [collaboratorsWidget] }
        ]
        }
        ]) %}
    {% endif %}



    {% set id = 'issueView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}

{% block stats %}
    <li>{{ 'oro.ui.created_at'|trans }}
        : {{ breadcrumbs.entity.created ? breadcrumbs.entity.created|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'oro.ui.updated_at'|trans }}
        : {{ breadcrumbs.entity.updated ? breadcrumbs.entity.updated|oro_format_datetime : 'N/A' }}</li>
{% endblock stats %}