{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'issues-grid' %}
{% set pageTitle = 'anyt.bugtracker.issue.entity_plural_label'|trans %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        entity_class: entity_class,
        exportProcessor: 'anyt_issue',
        exportTemplateProcessor: 'anyt_issue',
        importProcessor: 'anyt.add_or_replace',
        importTitle: 'oro.importexport.import.entity'|trans({'%entityName%': 'anyt.bugtracker.issue.entity_plural_label'|trans}),
        dataGridName: gridName
    } %}

    {% if resource_granted('anyt_issue_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('anyt_issue_create'),
                'entity_label': 'anyt.bugtracker.issue.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}