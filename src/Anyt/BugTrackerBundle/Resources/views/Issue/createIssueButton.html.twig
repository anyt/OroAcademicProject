{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set label = 'oro.ui.create_entity'|trans({'%entityName%': 'anyt.bugtracker.issue.entity_label'|trans}) %}
{{ UI.clientButton({
    'dataUrl': path('anyt_issue_create', {assignee: entity.id}),
    'aCss': 'no-hash',
    'dataId': entity.id,
    'label' : label,
    'widget' : {
        'type' : 'dialog',
        'multiple' : true,
        'options' : {
            'alias': 'issue-dialog',
            'dialogOptions' : {
                'title' : label,
                'allowMaximize': true,
                'allowMinimize': true,
                'dblclick': 'maximize',
                'maximizedHeightDecreaseBy': 'minimize-bar',
                'width': 1000
            }
        }
    }
}) }}
