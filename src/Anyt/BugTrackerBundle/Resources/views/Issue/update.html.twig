{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroFormBundle:Form:fields.html.twig', 'OroTagBundle:Form:fields.html.twig'] %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% set gridName = 'issue-related-grid' %}

{% if entity.id %}
    {% set formAction = path('anyt_issue_update', { 'id': entity.id }) %}
{% else %}
    {% set formAction = path('anyt_issue_create', app.request.query.all()) %}
{% endif %}

{% block navButtons %}
    {% if entity.id and resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('anyt_api_delete_issue', {'id': entity.id}),
            'dataRedirect': path('anyt_issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': entity.id,
            'entity_label': 'anyt.bugtracker.issue.entity_label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('anyt_issue_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('anyt_issue_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('anyt_issue_index'),
        'indexLabel': 'anyt.bugtracker.issue.entity_label'|trans,
        'entityTitle': entity.summary
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'anyt.bugtracker.issue.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'issue-edit' %}
    {% set data = [
        form_row(form.summary),
        form_row(form.description),
        form_row(form.assignee),
        form_row(form.priority),
        form_row(form.resolution),
        form_row(form.tags),
        form_widget(form.appendRelatedIssues, {'id': 'issueAppendRelatedIssues'}),
        form_widget(form.removeRelatedIssues, {'id': 'issueRemoveRelatedIssues'})
    ] %}
    {% if form.type is defined %}
        {% set data = [form_row(form.type)]|merge(data) %}
    {% endif %}
    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': data
        }]
    }] %}


    {% set dataBlocks = dataBlocks|merge([{
        'title' : 'anyt.bugtracker.issue.related_issues.label'|trans,
        'subblocks':
        [
        {
            'title' : null,
            'useSpan': false,
            'data' : [dataGrid.renderGrid(gridName, {issue_id: entity.id}, { cssClass: 'inner-grid' })]
        }
        ]
    }]) %}
    {#[dataGrid.renderGrid(gridName, {issue_id: entity.id}, { cssClass: 'inner-grid' })]#}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}